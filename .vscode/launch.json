  "version": "0.2.0",
  "configurations": [
    {
      "name": "Snakeskin CLI (Integrated Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/snakeskin/__main__.py",
      "cwd": "${workspaceRoot}",
      "args": [
          "--help"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Snakeskin CLI (External Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/snakeskin/__main__.py",
      "cwd": "${workspaceRoot}",
      "args": [
          "--help"
      ],
      "console": "externalTerminal"
    },
  ]
}